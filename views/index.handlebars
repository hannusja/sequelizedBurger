<div class="jumbotron container-fluid" id="background"> 

    <div id="header" class="row justify-content-md-center">
        <h1>Burgers</h1>
    </div>
    
    <div class="row" id="all_burgers">
        <div class="col" id="try_burger">
            <h2>Burgers to try</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            {{burger_name}} Cooked by: {{Cook.cook_name}}
                            <label for="customer_name">To be consumed by:</label>
                            <input type="text" id="customer_name" name="customer_name">
                            <button class="btn btn-warning change_devoured" data-id="{{id}}">
                                Devour it!
                            </button>

                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col" id="eaten-burgers">
            <h2>Burgers eaten</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                        {{burger_name}} Cooked by: {{Cook.cook_name}} Consumed by: {{Customer.customer_name}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div id="cook_burger">
        <h2>Cook a Burger</h2>
        <form class="form-inline" id="create-form">
            <div class="form-group">
                <label for="burger_name">Burger Name:</label>
                <input type="text" id="burger_name" name="burger_name">
            </div>    
            <div class="form-group">
                <label for="cook_name">Cooked by:</label>
                <input type="text" id="cook_name" name="cook_name">
            </div>
            <button class="btn btn-danger" type="submit">Cook This Burger</button>
        </form>
    </div>

</div>